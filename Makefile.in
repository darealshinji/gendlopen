

all: gendlopen

clean-test:
	cd test && $(MAKE) clean

clean-src:
	cd src && $(MAKE) clean

clean: clean-test clean-src
	rm -f settings.mk test.cpp test.o test.obj

distclean: clean
	rm -f src/Makefile test/Makefile Makefile test.log

gendlopen:
	cd src && $(MAKE)

check: $(GENDLOPEN)
	cd test && $(MAKE)

run_tests: test
	cd test && $(MAKE) run_tests

run_tests_wine: test
	cd test && $(MAKE) run_tests_wine

