#!/bin/sh

gendlopen="\$(DEF_GENDLOPEN)"

opt_gcc="-O2"
opt_ld=""
opt_msc="-O2"
opt_link=""

cflags=":"
cxxflags=":"
cppflags=":"
ldflags=":"
gtk_cflags=":"
glib_cflags=":"
pkgconfig=":"
ld=":"

check_std="yes"
check_xxd="yes"

win32="no"
msvc="no"
nix="yes"
with_notify="no"
with_appind="no"

xhave_dlmopen="//"
xhave_dlinfo="//"
have_dlmopen="no"
have_dlinfo="no"
with_gnu_source="no"



###############################################################################
## helper functions
###############################################################################

testfiles="test.c test.cpp test.h test.hpp test.o test.obj test.exe a.out a.exe"

create_makefile()
{
    if [ "x$with_appind" != "xyes" ]; then xappind="#"; fi
    if [ "x$with_notify" != "xyes" ]; then xnotify="#"; fi
    if [ "x$win32"       != "xyes" ]; then xwin32="#"; fi
    if [ "x$msvc"        != "xyes" ]; then xmsvc="#"; fi
    if [ "x$nix"         != "xyes" ]; then xnix="#"; fi
    if [ "x$clang"        = "x"    ]; then xclang="#"; fi
    if [ "x$ar"           = "x"    ]; then xar="#"; fi

    echo "create ${1}Makefile"

    cat settings.mk rules.mk "${1}Makefile.in" | \
    sed -e "s,@APPIND@,$xappind,g" \
        -e "s,@NOTIFY@,$xnotify,g" \
        -e "s,@CLANG@,$xclang,g" \
        -e "s,@AR@,$xar,g" \
        -e "s,@W32@,$xwin32,g" \
        -e "s,@MSVC@,$xmsvc,g" \
        -e "s,@NIX@,$xnix,g" \
        > "${1}Makefile"
}

run_cmd()
{
    echo "$1" >> test.log
    $1 >/dev/null 2>>test.log
    ret=$?
    echo '' >> test.log
}

_check_tool()
{
    printf "check for $1 ... "
    #tool="$(which $1 2>/dev/null)"

    oldIFS="$IFS"

    # behavior of `which' isn't identical across systems
    # so we do our own lookup

    case "$(uname -s)" in
        CYGWIN*|MINGW*|MSYS*|Windows*|UWIN*)
        IFS=';'
        ;;
        *)
        IFS=':'
        ;;
    esac

    for p in $PATH ; do
        if [ -x "$p/$1" ]; then
            tool="$p/$1"
            break
        fi
    done

    # revert old IFS value
    IFS="$oldIFS"

    if [ "x$tool" = "x" ]; then
        echo "not found"
    else
        echo "$tool"
        tool="$1"  # set to command-only
    fi
}

check_tool()
{
    tool=""
    _check_tool "$1"

    if [ "x$2" = "xexit" ] && [ "x$tool" = "x" ]; then
        echo "error: nothing found"
        exit 1
    fi
}

check_host_tool()
{
    tool=""
    _check_tool "${host}$1"

    if [ "x$2" = "xexit" ] && [ "x$tool" = "x" ]; then
        echo "error: nothing found"
        exit 1
    fi
}

check_cc_triple()
{
    printf "check target triple of $1 ... "

    cmd="$1 -dumpmachine"
    echo "$cmd" >> test.log
    triple="$($cmd 2>>test.log)"

    if [ "x$triple" = "x" ]; then
        cmd="$1 -print-target-triple"
        echo "$cmd" >> test.log
        triple="$($cmd 2>>test.log)"
    fi

    if [ "x$triple" = "x" ]; then
        echo "nothing found"
    else
        triple=$(echo "$triple" | sed 's|-pc-|-|; s|-unknown-|-|')
        echo "$triple"
    fi
}

check_clang_ast()
{
    clang=""
    printf "check if $1 can create an AST dump ... "

    echo '' > test.h
    run_cmd "$1 -Xclang -ast-dump $2 test.h"

    if [ $ret -eq 0 ]; then
        clang="$1"
        echo "yes"
    else
        echo "no"
    fi

    rm -f $testfiles
}

check_header()
{
    header=""
    printf "check for header $1 ... "

    echo "#include <$1>" > test.c
    run_cmd "$cc $CFLAGS -E test.c"

    if [ $ret -eq 0 ]; then
        header="$1"
        echo "OK"
    else
        echo "not found"
    fi

    rm -f $testfiles
}

check_libdl()
{
    printf "check if -ldl is needed ... "

    cat <<EOF > test.c
#include <dlfcn.h>
int main() {
void *handle;
handle = dlopen("foo.so", RTLD_LAZY);
(void)handle;
return 0;
}
EOF

    run_cmd "$cc -Werror test.c -o a.out"

    if [ $ret -eq 0 ]; then
        echo "no"
    else
        run_cmd "$cc -Werror test.c -o a.out -ldl"

        if [ $ret -eq 0 ]; then
            echo "yes"
            libdl="-ldl"
        else
            echo "error"
            exit 1
        fi
    fi

    rm -f $testfiles
}

check_dlmopen()
{
    printf "check for dlmopen() ... "

    cat <<EOF > test.c
#include <dlfcn.h>
#include <link.h>
int main() {
void *handle;
handle = dlmopen(LM_ID_NEWLM, "foo.so", RTLD_LAZY);
(void)handle;
return 0;
}
EOF

    # dlmopen() is a GNU extension
    run_cmd "$cc -Werror -D_GNU_SOURCE test.c -o a.out $libdl"

    if [ $ret -eq 0 ]; then
        echo "OK"
        have_dlmopen="yes"
        with_gnu_source="yes"
    else
        echo "not found"
    fi

    rm -f $testfiles
}

check_dlinfo()
{
    printf "check for dlinfo() ... "

    cat <<EOF > test.c
#include <stddef.h>
#include <link.h>
#include <dlfcn.h>
int main() {
int ret;
struct link_map *lm;
void *handle;
handle = dlopen("foo.so", RTLD_LAZY);
if (handle) {
    lm = NULL;
    ret = dlinfo(handle, RTLD_DI_LINKMAP, &lm);
    (void)ret;
}
return 0;
}
EOF

    if [ "x$with_gnu_source" != "xyes" ]; then
        run_cmd "$cc -Werror test.c -o a.out $libdl"

        if [ $ret -eq 0 ]; then
            echo "OK"
            have_dlinfo="yes"
        fi
    fi

    # test again with -D_GNU_SOURCE
    if [ "x$have_dlinfo" != "xyes" ]; then
        run_cmd "$cc -Werror -D_GNU_SOURCE test.c -o a.out $libdl"

        if [ $ret -eq 0 ]; then
            echo "OK"
            have_dlinfo="yes"
            with_gnu_source="yes"
        fi
    fi

    if [ "x$have_dlinfo" != "xyes" ]; then
        echo "not found"
    fi

    rm -f $testfiles
}

check_cxx_flag()
{
    if [ "x$1" = "x1" ]; then
        flag=""
    fi

    if [ "x$flag" = "x" ]; then
        printf "check if $cxx accepts $2 ... "

        echo '' > test.cpp
        run_cmd "$cxx -Werror $2 -c test.cpp"

        if [ $ret -eq 0 ]; then
            flag="$2"
            echo "yes"
        else
            echo "no"
        fi
    fi

    rm -f $testfiles
}

check_std_version()
{
    if [ "x$1" = "xmsvc" ]; then
        check_cxx_flag 1 "-std:c++23"
        check_cxx_flag 0 "-std:c++20"
    else
        check_cxx_flag 1 "-std=gnu++23"
        check_cxx_flag 0 "-std=c++23"
        check_cxx_flag 0 "-std=gnu++20"
        check_cxx_flag 0 "-std=c++20"
    fi

    if [ "x$flag" = "x" ]; then
        echo "error: C++20 or newer is required"
        exit 1
    fi

    cxxstd="$flag"
}



###############################################################################
## parse arguments
###############################################################################

if [ "x$(pwd | grep ' ')" != "x" ]; then
    echo "error: path to source directory cannot contain spaces!"
    exit 1
fi

rm -f test.log

for i in "$@"
do
case $i in
    -help|-h|--help)
        cat <<EOL
usage: $0 OPTIONS

set compilers:
    cc=..  cxx=..  ccbuild=..

host triplet:
    host=..

set clang-cl:
    cl=..

set ld:
    ld=..

set clang:
    clang=..

override flags:
    cflags=..  cxxflags=..  cppflags=..  ldlfags=..

append extra flags:
    xcflags=..  xcxxflags=..  xcppflags=..  xldlfags=..

set flags for GTK2 and GLib headers (ignored for win32):
    gtk-cflags=..  glib-cflags=..

optimizing build type:
    opt=[release|debug|minsize]

set ar tool:
    ar=..

set pkg-config too:
    pkgconfig=..

set gendlopen tool used for cross-compiling tests:
    gdo=..

don't check for -std.. flags:
    -no-std-checks

don't search for xxd tool:
    -no-xxd

print this help:
    -h, -help

EOL
        exit 0
        ;;

    cc=*)           cc="${i#*=}";;
    cxx=*)          cxx="${i#*=}";;
    ccbuild=*)      cc_build="${i#*=}";;
    host=*)         host="${i#*=}";;
    cl=*)           cl="${i#*=}";;
    ld=*)           ld="${i#*=}";;
    clang=*)        clang="${i#*=}";;
    ar=*)           ar="${i#*=}";;
    pkgconfig=*)    pkgconfig="${i#*=}";;
    gdo=*)          gendlopen="${i#*=}";;
    cflags=*)       cflags="${i#*=}";;
    cxxflags=*)     cxxflags="${i#*=}";;
    cppflags=*)     cppflags="${i#*=}";;
    ldflags=*)      ldflags="${i#*=}";;
    xcflags=*)      xcflags="${i#*=}";;
    xcxxflags=*)    xcxxflags="${i#*=}";;
    xcppflags=*)    xcppflags="${i#*=}";;
    xldflags=*)     xldflags="${i#*=}";;
    opt=*)          opt="${i#*=}";;
    gtk-cflags=*)   gtk_cflags="${i#*=}";;
    glib-cflags=*)  glib_cflags="${i#*=}";;

    -no-std-checks)
        check_std="no"
        ;;

    -no-xxd)
        check_xxd="no"
        ;;

    *)
        echo "error: unknown option: $i"
        exit 1
        ;;
esac
done

# optimization flags
if [ "x$opt" = "xrelease" ]; then
    opt_gcc="-O3 -ffunction-sections -fdata-sections"
    opt_ld="-Wl,--gc-sections -s"
    opt_msc="-O2"
    opt_link="-release"
elif [ "x$opt" = "xdebug" ]; then
    opt_gcc="-O0 -g"
    opt_ld=""
    opt_msc="-Od -g"
    opt_link="-debug"
elif [ "x$opt" = "xminsize" ]; then
    opt_gcc="-Os -ffunction-sections -fdata-sections"
    opt_ld="-Wl,--gc-sections -s"
    opt_msc="-Od -g"
    opt_link="-release"
fi



###############################################################################
## tests
###############################################################################

# clang-cl / MSVC
if [ "x$cl" != "x" ]; then
    cc="$cl"
    cxx="$cl"
fi

# host triplet
if [ "x$host" != "x" ]; then
    host="${host}-"
fi

# host C
if [ "x$cc" = "x" ]; then
    check_host_tool gcc

    if [ "x$tool" = "x" ]; then
        check_host_tool cc exit
    fi

    cc="$tool"
else
    check_host_tool "$cc" exit
fi

check_cc_triple "$cc"
cc_triple="$triple"

# host C++
if [ "x$cxx" = "x" ]; then
    check_host_tool g++

    if [ "x$tool" = "x" ]; then
        check_host_tool c++ exit
    fi

    cxx="$tool"
elif [ "x$cxx" != "x$cc" ]; then
    check_host_tool "$cxx" exit
fi

# build C
if [ "x$cc_build" = "x" ]; then
    if [ "$cc" = "gcc" ] || [ "$cc" = "cc" ]; then
        cc_build="$cc"
    else
        check_tool gcc

        if [ "x$tool" = "x" ]; then
            check_tool cc exit
        fi

        cc_build="$tool"
    fi
fi

# host clang
if [ "x$clang" = "x" ]; then
    # check_clang_ast will set or empty the variable $clang
    if [ "x$cl" != "x" ]; then
        check_clang_ast "$cl"
    fi

    if [ "x$clang" = "x" ]; then
        check_tool clang
        clang="$tool"
    fi
fi

# clang AST
if [ "x$clang" != "x" ] && [ "x$cl" != "x$clang" ]; then
    if [ "x$cc_triple" != "x" ]; then
        clang_ast_target="--target=$cc_triple"
    fi

    check_clang_ast "$clang" "$clang_ast_target"

    if [ "x$clang" = "x" ]; then
        clang_ast_target=""
    fi
fi

# host ar
if [ "x$ar" = "x" ]; then
    check_host_tool ar
    ar="$tool"
fi

# xxd
gen_template="gen_template_h"
if [ "x$check_xxd" = "xyes" ]; then
    check_tool xxd

    if [ "x$tool" != "x" ]; then
        gen_template="gen_template_h.sh"
    fi
fi



###############################################################################
## check target platform
###############################################################################

if [ "x$cl" != "x" ]; then
    # MSVC
    win32="yes"
    msvc="yes"
    nix="no"

    if [ "x$cppflags" = "x:" ]; then
        cppflags="-Igetopt -DWIN32_LEAN_AND_MEAN"
    fi
    if [ "x$cflags" = "x:" ]; then
        cflags="-W3 $opt_msc"
    fi
    if [ "x$cxxflags" = "x:" ]; then
        cxxflags="-W3 $opt_msc -EHsc"
    fi
    if [ "x$ldflags" = "x:" ]; then
        ldflags="-subsystem:console $opt_link"
    fi

    if [ "x$check_std" = "xyes" ]; then
        check_std_version msvc
        check_cxx_flag 1 "-std:c++11"
        test_cxx11="$flag"
    fi

    if [ "x$ld" = "x:" ]; then
        link_flag="-link"
    else
        link_flag="-fuse-ld=$ld -link"
    fi

    exeext=".exe"
    dll="libhelloworld-0.dll"
    dll_cflags="-DBUILDING_DLL -LD"
    unicode_flags="-DUNICODE -D_UNICODE"
else
    # GCC / Clang

    dll="libhelloworld.so.0"
    ld_library_path_test="LD_LIBRARY_PATH=\"\$\$PWD/../test:\$\$LD_LIBRARY_PATH\""

    case $cc_triple in
        *-mingw*)
            target="mingw"
            dll="libhelloworld-0.dll"
            ld_library_path_test="" # not needed
            ;;
        *-darwin)
            dll="libhelloworld.0.dylib"
            # don't need to use DYLD_LIBRARY_PATH,
            # LD_LIBRARY_PATH works too
            ;;
        *-netbsd)
            ld_library_path_test="LD_LIBRARY_PATH=\"\$\$PWD/../test:/usr/pkg/lib:\$\$LD_LIBRARY_PATH\""
            ;;
        *-haiku)
            ld_library_path_test="LIBRARY_PATH=\"\$\$PWD/../test:\$\$LIBRARY_PATH\""
            ;;
        *-aix)
            dll="libhelloworld.a"
            ;;
        *)
            ;;
    esac

    # add $sysroot/include in case we're cross-compiling
    sysroot="$($cc -print-sysroot 2>/dev/null)"

    if [ "x$sysroot" != "x" ]; then
        sysroot_inc="-I$sysroot/include"
    fi

    if [ "x$cflags" = "x:" ]; then
        cflags="-Wall -Wextra $opt_gcc"
    fi
    if [ "x$cxxflags" = "x:" ]; then
        cxxflags="-Wall -Wextra $opt_gcc"
    fi
    if [ "x$ldflags" = "x:" ]; then
        ldflags="$opt_ld"
    fi

    if [ "x$check_std" = "xyes" ]; then
        check_std_version
        check_cxx_flag 1 "-std=c++11"
        test_cxx11="$flag"
    fi

    if [ "x$ld" != "x:" ]; then
        link_flag="-fuse-ld=$ld"
    fi

    if [ "$target" = "mingw" ]; then
        # MinGW
        win32="yes"
        nix="no"

        if [ "x$cppflags" = "x:" ]; then
            cppflags="-DWIN32_LEAN_AND_MEAN"
        fi

        ldflags="$ldflags -mconsole"
        exeext=".exe"
        dll_cflags="-DBUILDING_DLL"
        dll_ldflags="-shared"
        unicode_flags="-DUNICODE -D_UNICODE -municode"
    else
        # *nix
        if [ "x$cppflags" = "x:" ]; then
            cppflags=""
        fi

        check_libdl
        check_dlmopen
        check_dlinfo

        if [ "x$with_gnu_source" = "xyes" ]; then
            cppflags="$cppflags -D_GNU_SOURCE"
        fi
        if [ "x$have_dlmopen" = "xyes" ]; then
            cppflags="$cppflags -DHAVE_DLMOPEN"
            xhave_dlmopen=""
        fi
        if [ "x$have_dlinfo" = "xyes" ]; then
            cppflags="$cppflags -DHAVE_DLINFO"
            xhave_dlinfo=""
        fi

        dll_cflags="-fPIC"
        dll_ldflags="-shared"
        libdl="$libdl"
    fi
fi



###############################################################################
## check pkg-config and headers
###############################################################################

if [ "x$win32" = "xyes" ]; then
    pkgconfig=""
else
    if [ "x$pkgconfig" = "x:" ]; then
        check_host_tool pkg-config
        pkgconfig="$tool"
    fi

    have_glib_headers="no"
    have_gtk_headers="no"

    # GLib
    if [ "x$glib_cflags" = "x:" ]; then
        if [ "x$pkgconfig" = "x" ]; then
            glib_cflags=""
        else
            glib_cflags="$("$pkgconfig" --cflags glib-2.0 2>/dev/null)"
        fi
    fi

    CFLAGS="$glib_cflags"
    check_header "glib.h"

    if [ "x$header" != "x" ]; then
        check_header "glib-object.h"

        if [ "x$header" != "x" ]; then
            have_glib_headers="yes"
        fi
    fi

    # GTK
    if [ "x$gtk_cflags" = "x:" ]; then
        gtk_cflags="-Wno-deprecated-declarations"

        if [ "x$pkgconfig" != "x" ]; then
            gtk_cflags="$gtk_cflags $("$pkgconfig" --cflags gtk+-2.0 2>/dev/null)"
        fi
    fi

    CFLAGS="$gtk_cflags"
    check_header "gtk/gtk.h"

    if [ "x$header" != "x" ]; then
        have_gtk_headers="yes"
    fi

    if [ "x$have_glib_headers" = "xyes" ]; then
        with_notify="yes"
    fi
    if [ "x$have_gtk_headers" = "xyes" ]; then
        with_appind="yes"
    fi
fi



###############################################################################
## output
###############################################################################

# examples
echo ""
echo "build appindicator example: $with_appind"
echo "build notify example: $with_notify"
printf "build UUID example: "

if [ "x$clang" = "x" ]; then
    echo "no (clang missing)"
elif [ "x$win32" = "xyes" ]; then
    echo "win32"
else
    echo "libuuid"
fi

# output

#cat <<EOF > config.h
cat <<EOF > /dev/null
/* whether dlinfo(3) is available */
${xhave_dlinfo}#ifndef HAVE_DLINFO
${xhave_dlinfo}#define HAVE_DLINFO 1
${xhave_dlinfo}#endif

/* whether dlmopen(3) is available */
${xhave_dlmopen}#ifndef HAVE_DLMOPEN
${xhave_dlmopen}#define HAVE_DLMOPEN 1
${xhave_dlmopen}#endif
EOF

cat <<EOF > settings.mk

CC            = $cc
CXX           = $cxx
CCBUILD       = $cc_build
AR            = $ar
CLANG         = $clang
CLANG_TARGET  = $clang_ast_target

EXEEXT        = $exeext
DEF_GENDLOPEN = $PWD/src/gendlopen\$(EXEEXT)
GENDLOPEN     = $gendlopen
GEN_TEMPL     = $gen_template

CPPFLAGS      = $cppflags $xcppflags
CFLAGS        = $cflags $xcflags \$(CPPFLAGS)
CXXFLAGS      = $cxxflags $cxxstd $xcxxflags \$(CPPFLAGS)
LDFLAGS       = $link_flag $ldflags $xldflags
SYSROOT_INC   = $sysroot_inc

DLL           = $dll
DLL_CFLAGS    = $dll_cflags
DLL_LDFLAGS   = $dll_ldflags

TEST_CFLAGS   = \$(CFLAGS) $dlmopen_cppflags
TEST_CXXFLAGS = \$(CXXFLAGS) $test_cxx11 $dlmopen_cppflags
TEST_LDFLAGS  = \$(LDFLAGS)
TEST_LIBPATH  = $ld_library_path_test
UNICODE_FLAGS = $unicode_flags
LIBDL         = $libdl

GLIB_CFLAGS   = $glib_cflags

GTK_CFLAGS    = $gtk_cflags

EOF

echo ""
create_makefile
create_makefile "src/"
create_makefile "test/"
create_makefile "examples/"

#cat settings.mk
#rm settings.mk
